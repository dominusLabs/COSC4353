<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Management</title>
    <link rel="stylesheet" href="/public/css/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css">
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <style>
        .choices__list--dropdown .choices__item {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Event Management Form</h1>
        <form action="#" method="POST">
            <div class="input-group">
                <label for="eventName">Event Name</label>
                <input type="text" id="eventName" name="eventName" maxlength="100" required>
            </div>
            <div class="input-group">
                <label for="eventDescription">Event Description</label>
                <textarea id="eventDescription" name="eventDescription" required></textarea>
            </div>
            <div class="input-group">
                <label for="location">Location</label>
                <textarea id="location" name="location" required></textarea>
            </div>
            <div class="input-group">
                <label for="requiredSkills">Required Skills</label>
                <select id="requiredSkills" name="requiredSkills" multiple required>
                    <option value="woodworking">Woodworking</option>
                    <option value="cooking">Cooking</option>
                    <option value="gardening">Gardening</option>
                    <option value="handyman_services">Handyman Services</option>
                    <option value="childcare">Childcare</option>
                    <!-- Add more skills here -->
                </select>
            </div>
            <div class="input-group">
                <label for="urgency">Urgency</label>
                <select id="urgency" name="urgency" required>
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                </select>
            </div>
            <div class="input-group">
                <label for="eventDate">Event Date</label>
                <input type="text" id="eventDate" name="eventDate" placeholder="Select date" required>
            </div>
            <div class="buttons">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
    <script src="/public/js/scripts.js"></script>
    <script src="/public/js/app.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            flatpickr("#eventDate", {
                mode: "single",
                dateFormat: "Y-m-d",
                enableTime: false,
                minDate: "today",
                "locale": {
                    "firstDayOfWeek": 1 
                }
            });

            const skillsElement = document.getElementById('requiredSkills');
            const choices = new Choices(skillsElement, {
                removeItemButton: true,
                searchEnabled: true,
                placeholderValue: "Select skills",
                noChoicesText: "No more options",
            });
        });
    </script>
</body>
</html>

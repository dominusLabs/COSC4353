{{#> layout}}
  <title>Reports</title>
  <link rel="stylesheet" href="/public/css/volunteer_history.css">
  <link rel="stylesheet" href="/public/css/pagination.css">
  <script src="/public/js/notifications.js"></script>
  

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Dashboard</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
    <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
    <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
    </div>
    <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle d-flex align-items-center gap-1">
    <svg class="bi"><use xlink:href="#calendar3"></use></svg>
    This week
    </button>
  </div>
</div>

{{!-- <canvas class="my-4 w-100" id="myChart" width="632" height="267" style="display: block; box-sizing: border-box; height: 267px; width: 632px;"></canvas> --}}

<div class="table-container">
    <h3>Reports</h3>
    <div class="d-flex justify-content-between mb-3">
      <input type="date" id="startDate" class="form-control me-2" placeholder="Start Date">
      <input type="date" id="endDate" class="form-control me-2" placeholder="End Date">
      <input type="text" id="searchText" class="form-control me-2" placeholder="Search by name">
      <button type="button" class="btn btn-primary" id="filterButton">Filter</button>
    </div>    
    
    <table id="notificationTable" class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Date</th>
                <th>Message</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="notificationList">
            <!-- Report data will be populated here -->
        </tbody>
    </table>

    <div class="pagination">
      <button class="btn btn-outline-secondary" id="prevPage">Previous</button>
      <button class="btn btn-outline-secondary" id="nextPage">Next</button>
    </div>

</div>

{{/layout}}
